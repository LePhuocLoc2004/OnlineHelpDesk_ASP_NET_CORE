@model OnlineHelpDesk_ASP_NET_CORE.ViewModels.SupportUpdateVM
@{
    ViewData["Title"] = "Cập nhật thông tin cá nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-primary mb-4">Cập nhật thông tin tài khoản</h3>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="CapNhatThongTin" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label>Họ tên</label>
        <input asp-for="Hoten" class="form-control" />
        <span asp-validation-for="Hoten" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Ngày sinh</label>
        <input asp-for="Ngaysinh" class="form-control" type="date" />
    </div>

    <div class="mb-3">
        <label>Mật khẩu mới</label>
        <input asp-for="NewPassword" class="form-control" type="password" />
    </div>

    <div class="mb-3">
        <label>Xác nhận mật khẩu</label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Ảnh đại diện</label><br />
        @if (!string.IsNullOrEmpty(Model.HinhanhHienTai))
        {
            <img src="@Model.HinhanhHienTai" width="80" class="rounded mb-2" />
        }
        <input asp-for="ImageUpload" type="file" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Cập nhật</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
