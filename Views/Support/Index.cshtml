@model List<OnlineHelpDesk_ASP_NET_CORE.Models.YeuCau>
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Yêu cầu của tôi";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var uuTiens = (List<OnlineHelpDesk_ASP_NET_CORE.Models.DoUuTien>)ViewBag.DoUuTienList;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="text-primary">Danh sách yêu cầu bạn cần xử lý</h3>
    <a href="@Url.Action("CapNhatThongTin", "Support")" class="btn btn-outline-info">
        <i class="bi bi-person-gear me-1"></i> Cập nhật tài khoản
    </a>
</div>
    


<form method="get" class="row g-3 mb-4">
    <div class="col-md-3">
        <label class="form-label">Từ ngày</label>
        <input type="date" name="tuNgay" class="form-control"
               value="@HttpContextAccessor.HttpContext.Request.Query["tuNgay"]" />
    </div>
    <div class="col-md-3">
        <label class="form-label">Đến ngày</label>
        <input type="date" name="denNgay" class="form-control"
               value="@HttpContextAccessor.HttpContext.Request.Query["denNgay"]" />
    </div>
    <div class="col-md-3">
    <label class="form-label">Độ ưu tiên</label>
    <select name="doUuTien" class="form-select">
        <option value="">-- Tất cả --</option>
        @foreach (var item in uuTiens)
        {
            var selected = Context.Request.Query["doUuTien"] == item.MaDoUuTien.ToString() ? "selected" : "";
            <option value="@item.MaDoUuTien" selected>
                @item.TenDoUuTien
            </option>
        }
    </select>
</div>

    <div class="col-md-3 d-flex align-items-end">
        <button type="submit" class="btn btn-primary w-100">Tìm kiếm</button>
    </div>
</form>

<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>#</th>
            <th>Tiêu đề</th>
            <th>Người gửi</th>
            <th>Độ ưu tiên</th>
            <th>Ngày gửi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaYeuCau</td>
                <td>@item.Tieude</td>
                <td>@item.NhanVienGui?.Hoten</td>
                <td>@item.DoUuTien?.TenDoUuTien</td>
                <td>@item.Ngaygui.ToString("dd/MM/yyyy")</td>
            </tr>
        }
    </tbody>
</table>
